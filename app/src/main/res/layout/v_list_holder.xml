<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
    >

    <me.grantland.widget.AutofitTextView
        android:id="@+id/text_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/img_restaurant_photo"
        android:textSize="20sp"
        app:minTextSize="14sp"
        android:maxLines="2"
        android:hint="QWRQWIRQIOWRBIQOWBRIQWIORQWIOBROQIW"
        />

    <ImageView
        android:id="@+id/img_restaurant_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        />

    <RatingBar
        android:id="@+id/text_restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_restaurant_name"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        />

</RelativeLayout>